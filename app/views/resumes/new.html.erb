<div class="col-md-12 col-centered" style="height:600px;overflow:auto;padding-top:120px">
    <div class="container">
        <div class="col-md-6 col-centered">
            <div class="form-area">
                <h3>我要领养 <%= @job.title %></h3>
                <hr>
                <div class="form-group">
                    <%= simple_form_for [@job,@resume] do |f| %>
                        领养人：<%= current_user.name %>
                        <%= f.input :content,label:'领养描述' %>
                        <%= f.input :attachment,label:'想领养的猫猫照片' %>
                        <%= f.submit "送出" ,:class => "btn btn-primary pull-right"%>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
