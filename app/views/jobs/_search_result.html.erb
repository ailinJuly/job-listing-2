    <div class="job-table">
        <% @jobs.each do |job| %>
            <div class="row jobs-show">
                <div class="col-md-12 col-lg-9 col-lg-offset-2">
                    <div class="pull-right">
                        发布时间：<%= job.created_at.to_date %>
