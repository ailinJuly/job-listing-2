<div class="col-md-10 col-centered" style="height:600px;overflow:auto;padding-top:120px;padding-left:120px">
    <br>
    <% if @query_string.blank? %>
        <div class="alert alert-danger" role="alert">
            Sorry, The search content cannot be blank, please type some product into to search.
        </div>
    <% elsif @jobs.blank? %>
        <br>
        <div class="alert alert-danger" role="alert">
            搜索信息不能为空，请输入关键字搜索
        </div>
    <% else %>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="text-center"> 你找的猫猫在这里 ！</h2>
                <table class="table table-hover table-boldered table-striped custab">
                    <thead>
                        <tr>
                            <th>猫猫小名</th>
                            <th>品种</th>
                            <th>发布时间</th>
                        </tr>
                    </thead>
                    <% @jobs.each do |job| %>
                        <tbody>
                            <tr>
                                <td><%= link_to(job.title, job_path(job)) %></td>
                                <td><%= job.category %> </td>
                                <td><%= job.created_at %></td>
                            </tr>
                        </tbody>
                    <% end %>
                </table>
                <div class="text-center">
                    <%= will_paginate(@jobs, renderer: BootstrapPagination::Rails) %>
                </div>
            </div>
        </div>
    <% end %>
</div>
