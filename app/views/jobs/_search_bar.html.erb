<div class="row">
    <div class="col-sm-9 col-lg-8 col-lg-offset-7">
        <%= form_tag search_jobs_path , :method => :get, :class => "navbar-form navbar-right" do %>
            <div class="input-group serach_box">
                <input type="text" class="form-control" name="q" placeholder="搜索职位、公司或地点" value="<%= params[:q] %>">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default ">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
        <% end %>
    </div>
</div>
